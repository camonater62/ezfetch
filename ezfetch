#! /bin/bash
# ezfetch - the lightest and simplest fetch out there.
# c4m00 edit

# User + Host
HOST="$USER@$(hostname)"

# Colors
COLORS=("\e[31m" "\e[32m" "\e[33m" "\e[34m" "\e[35m" "\e[36m")
COLOR=${COLORS[$(($RANDOM % 6))]}
NUMBLOCKS=$(( $(expr length $HOST) / $(expr length $COLORS) ))
for ((i = 0; i < $(expr length $COLORS); i++)); do
	BLOCKS=""
	for ((j = 0; j < $NUMBLOCKS; j++)); do
		BLOCKS="${BLOCKS}â–ˆ"
	done
	ALLCOLORS="${ALLCOLORS}${COLORS[i]}${BLOCKS}"
done

# Bar at the top
for ((i = 0; i < $(expr length $HOST); i++)); do
	TOPBAR="$TOPBAR-"
done

# Kernel
KERNEL="$(uname -rs)"

# Window Manager
if [ -n "$DISPLAY" ]; then
  ID="$(xprop -root -notype _NET_SUPPORTING_WM_CHECK)"
  ID="$(echo $ID | cut -c 39-)"
  WM="$(xprop -id "$ID" -notype -len 100 -f _NET_WM_NAME 8t | grep "WM_NAME = " | cut -c 17- | rev | cut -c 2- | rev | tr -d '\n')"
fi
if [ "$WM" = "" ]; then
  WM="N/A"
fi

# Distro
OS=$(lsb_release -sd)

# Ram & Current Usage
RAM=$(free -m | awk 'NR==2{printf "%s/%sMB (%.1f%%)\n", $3, $2, ((100*$3/$2)) }')

# CPU Model
CPU=$(awk 'BEGIN{FS=":"} /model name/ { print $2; exit }' /proc/cpuinfo | awk 'BEGIN{FS=" @"; OFS="\n"} { print $1; exit }' | cut -c 2-)

# GPU Model
GPU=$(glxinfo -B | awk '/Device/ {print "%s %s %s", $4, $5, $6}' )
if [ "$GPU" = "" ]; then
	GPU="N/A"
fi

# Desktop Environment
if [ "$XDG_CURRENT_DESKTOP" = "" ]; then
  if [ "$XDG_DATA_DIRS" = "/usr/local/share:/usr/share:/var/lib/snapd/desktop" ]; then
    DE=""
  else
    DE=$(echo "$XDG_DATA_DIRS" | sed 's/.(xfce|kde|gnome)./\1/')
  fi
else
  DE=$XDG_CURRENT_DESKTOP
fi
if [ "$DE" = "" ]; then
  DE="N/A"
fi

# No Color
NC='\033[0m'

# Here's where it displays everything!
echo -e "${COLOR}$HOST
${NC}$TOPBAR
${COLOR}OS${NC}: $OS
${COLOR}Kernel${NC}: $KERNEL
${COLOR}WM${NC}: $WM
${COLOR}DE${NC}: $DE
${COLOR}Shell${NC}: $SHELL
${COLOR}CPU${NC}: $CPU
${COLOR}GPU${NC}: $GPU
${COLOR}Ram${NC}: $RAM
${ALLCOLORS}${NC}"
